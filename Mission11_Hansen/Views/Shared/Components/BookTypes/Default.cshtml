@model IEnumerable<string>

    <div class="d-grid gap-2">
        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index" asp-route-bookType="" asp-route-pageNum="">Home</a>

        @foreach(string pt in Model ?? Enumerable.Empty<string>())
            {
                <a class="btn @(pt == ViewBag.SelectedBookType ? "btn-primary" : "btn-outline-secondary")" asp-controller="Home" asp-action="Index" asp-route-bookType="@pt" asp-route-pageNum="1">@pt</a>
            }

    </div>